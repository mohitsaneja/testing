<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">
   <bean id="e" class="Inherit_Bean.Employee">
   <constructor-arg value="1"></constructor-arg>
   <constructor-arg value="Mohit"></constructor-arg>  
   </bean>
   <bean id="e1" class="Inherit_Bean.Address">
   <constructor-arg value="SrigangaNagar"></constructor-arg>
   <constructor-arg value="India"></constructor-arg>
   <constructor-arg value="Setia Colony"></constructor-arg>
   
     
   </bean>
   <bean id="e2" class="Inherit_Bean.Employee" parent="e" >
   <constructor-arg ref="e1"></constructor-arg>
   </bean>
</beans>